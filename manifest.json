{
  "manifest_version": 3,
  "name": "StuHack",
  "version": "0.5.8",
  "description": "Premium Studocu Downloader",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "content_scripts": [
    {
      "js": [
        "version-check.js",
        "remove-banner.js",
        "remove-blur.js",
        "doc-viewer.js"
      ],
      "css": ["style.css"],
      "matches": [
        "https://www.studocu.com/*",
        "https://www.studeersnel.nl/*",
        "https://www.studocu.vn/*",
        "https://www.studocu.es/*",
        "https://www.studocu.it/*",
        "https://www.studocu.com.br/*",
        "https://www.studocu.de/*",
        "https://www.studocu.fr/*",
        "https://www.studocu.se/*",
        "https://www.studocu.pl/*",
        "https://www.studocu.co.uk/*",
        "https://www.studocu.com.tr/*",
        "https://www.studocu.com.au/*"
      ]
    }
  ]
} 